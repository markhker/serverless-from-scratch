{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "target": "es2017",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2017", "esnext"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": [
        "src/libs/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@typings/*": [
        "typings/index.ts",
        "typings/*"
      ]
    },
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.map",
    "webpack.config.js"
  ]
}
